<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >


<mapper namespace="com.official.mapper.ContentMapper" >
  <resultMap id="BaseResultMap" type="com.official.entity.ContentEntity" >
    <id column="id" property="id" jdbcType="INTEGER" />
    <result column="name" property="name" jdbcType="VARCHAR" />
    <result column="summary" property="summary" jdbcType="VARCHAR" />
    <result column="content" property="content" jdbcType="VARCHAR" />
    <result column="create_time" property="createTime" jdbcType="VARCHAR" />
    <result column="update_time" property="updateTime" jdbcType="VARCHAR" />
    <result column="order_num" property="orderNum" jdbcType="INTEGER" />
  </resultMap>
  
  
  <sql id="column">
       content_t.id              id,
       content_t.`name`    		 name,
       content_t.order_num       order_num,
       content_t.summary         summary,
       content_t.content     	 content,
       content_t.create_time     create_time,
       content_t.update_time	 update_time
  </sql>
  
  <select id="selectContent" resultMap="BaseResultMap">
         SELECT
           <include refid="column"/>
         FROM
         	content_t
         WHERE 1=1
         <if test="name!=null and name!=''">
         	AND  name LIKE &apos;%${name}&apos;
         </if>
         ORDER BY update_time DESC
  </select>

</mapper>